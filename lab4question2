#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <dirent.h>
#include <string.h>
int main()
        {
        DIR*dp;
        struct dirent*dir;
        int fd,n;
        dp=opendir(".");
        if(dp)
                {
        while((dir=readdir(dp))!=NULL)
        {
                if(!strcmp(dir->d_name,".")||(!strcmp(dir->d_name,".."))
                                continue;
                fd=open(dir->d_name,O_RDWR);
                if(fd==-1)
                   continue;
                n=lseek(fd,0,SEEK_END);
                close(fd);
                if(n==0)
                {
                   unlink(dir->d_name);
                }
             } 3
             closedir(dp);
        }
        return 0;
}
